        JButton btnEqual = new JButton("=");
        btnEqual.setBounds(465, 290, 45, 56);
        getContentPane().add(btnEqual);
        btnEqual.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                switch (tempOper) {
                    case 1:
                        tempEqual = tempNumOne + tempNumTwo;
                        textArea.setText(tempEqual + "");
                        tempNumOne = -1;
                        tempNumTwo = -1;
                        tempEqual = -1;
                        tempOper = 0;
                        break;
                    case 2:
                        tempEqual = tempNumOne - tempNumTwo;
                        textArea.setText(tempEqual + "");
                        tempNumOne = -1;
                        tempNumTwo = -1;
                        tempEqual = -1;
                        tempOper = 0;
                        break;
                    case 3:
                        tempEqual = tempNumOne * tempNumTwo;
                        textArea.setText(tempEqual + "");
                        tempNumOne = -1;
                        tempNumTwo = -1;
                        tempEqual = -1;
                        tempOper = 0;
                        break;
                    case 4:
                        tempEqual = tempNumOne / tempNumTwo;
                        textArea.setText(tempEqual + "");
                        tempNumOne = -1;
                        tempNumTwo = -1;
                        tempEqual = -1;
                        tempOper = 0;
                        break;
                }

            }
        });

