    public void actionPerformed(ActionEvent e) {

        if (e.getSource() == btnEqual) {
            switch (tempOper[0]) {
                case 1:
                    tempEqual[0] = tempNumOne[0] + tempNumTwo[0];
                    textArea.setText(tempEqual[0] + "");
                    tempNumOne[0] = -1;
                    tempNumTwo[0] = -1;
                    tempEqual[0] = -1;
                    tempOper[0] = 0;
                    break;
                case 2:
                    tempEqual[0] = tempNumOne[0] - tempNumTwo[0];
                    textArea.setText(tempEqual[0] + "");
                    tempNumOne[0] = -1;
                    tempNumTwo[0] = -1;
                    tempEqual[0] = -1;
                    tempOper[0] = 0;
                    break;
                case 3:
                    tempEqual[0] = tempNumOne[0] * tempNumTwo[0];
                    textArea.setText(tempEqual[0] + "");
                    tempNumOne[0] = -1;
                    tempNumTwo[0] = -1;
                    tempEqual[0] = -1;
                    tempOper[0] = 0;
                    break;
                case 4:
                    tempEqual[0] = tempNumOne[0] / tempNumTwo[0];
                    textArea.setText(tempEqual[0] + "");
                    tempNumOne[0] = -1;
                    tempNumTwo[0] = -1;
                    tempEqual[0] = -1;
                    tempOper[0] = 0;
                    break;
            }
        }

        if (e.getSource() == btnplus) {
            tempOper[0] = 1;
        }

        if (e.getSource() == btnsqr7) {
            if (tempOper[0] > 0) {
                if (tempNumTwo[0] == -1) {
                    tempNumTwo[0] = 0;
                    textArea.setText(tempNumTwo[0] + "");
                } else {
                    tempNumTwo[0] = tempNumTwo[0] * 10;
                    tempNumTwo[0] = tempNumTwo[0] + 0;
                    textArea.setText(tempNumTwo[0] + "");
                }

            }
            if (tempNumOne[0] == -1) {
                tempNumOne[0] = 1;
                textArea.setText(tempNumOne[0] + "");
            } else if (tempNumOne[0] != -1 && tempOper[0] == 0) {
                tempNumOne[0] = tempNumOne[0] * 10;
                tempNumOne[0] = tempNumOne[0] + 0;
                textArea.setText(tempNumOne[0] + "");
            }
        }

        if (e.getSource() == btnsqr3) {
            tempOper[0] = 2;
        }

        if (e.getSource() == btnsqr2) {
            lastEntry[0] = 3;
            if (tempOper[0] > 0) {
                if (tempNumTwo[0] == -1) {
                    tempNumTwo[0] = 3;
                    textArea.setText(tempNumTwo[0] + "");
                } else {
                    tempNumTwo[0] = tempNumTwo[0] * 10;
                    tempNumTwo[0] = tempNumTwo[0] + 3;
                    textArea.setText(tempNumTwo[0] + "");
                }

            }
            if (tempNumOne[0] == -1) {
                tempNumOne[0] = 3;
                textArea.setText(tempNumOne[0] + "");
            } else if (tempNumOne[0] != -1 && tempOper[0] == 0) {
                tempNumOne[0] = tempNumOne[0] * 10;
                tempNumOne[0] = tempNumOne[0] + 3;
                textArea.setText(tempNumOne[0] + "");
            }
        }

        if (e.getSource() == btnmult) {
            tempOper[0] = 3;
        }

        if (e.getSource() == btnsqr1) {
            lastEntry[0] = 2;
            if (tempOper[0] > 0) {
                if (tempNumTwo[0] == -1) {
                    tempNumTwo[0] = 2;
                    textArea.setText(tempNumTwo[0] + "");
                } else {
                    tempNumTwo[0] = tempNumTwo[0] * 10;
                    tempNumTwo[0] = tempNumTwo[0] + 2;
                    textArea.setText(tempNumTwo[0] + "");
                }

            }
            if (tempNumOne[0] == -1) {
                tempNumOne[0] = 2;
                textArea.setText(tempNumOne[0] + "");
            } else if (tempNumOne[0] != -1 && tempOper[0] == 0) {
                tempNumOne[0] = tempNumOne[0] * 10;
                tempNumOne[0] = tempNumOne[0] + 2;
                textArea.setText(tempNumOne[0] + "");
            }
        }

        if (e.getSource() == btnsqr0) {
            lastEntry[0] = 1;
            if (tempOper[0] > 0) {
                if (tempNumTwo[0] == -1) {
                    tempNumTwo[0] = 1;
                    textArea.setText(tempNumTwo[0] + "");
                } else {
                    tempNumTwo[0] = tempNumTwo[0] * 10;
                    tempNumTwo[0] = tempNumTwo[0] + 1;
                    textArea.setText(tempNumTwo[0] + "");
                }

            }
            if (tempNumOne[0] == -1) {
                tempNumOne[0] = 1;
                textArea.setText(tempNumOne[0] + "");
            } else if (tempNumOne[0] != -1 && tempOper[0] == 0) {
                tempNumOne[0] = tempNumOne[0] * 10;
                tempNumOne[0] = tempNumOne[0] + 1;
                textArea.setText(tempNumOne[0] + "");
            }
        }

        if (e.getSource() == button_25) {
            lastEntry[0] = 6;
            if (tempOper[0] > 0) {
                if (tempNumTwo[0] == -1) {
                    tempNumTwo[0] = 6;
                    textArea.setText(tempNumTwo[0] + "");
                } else {
                    tempNumTwo[0] = tempNumTwo[0] * 10;
                    tempNumTwo[0] = tempNumTwo[0] + 6;
                    textArea.setText(tempNumTwo[0] + "");
                }

            }
            if (tempNumOne[0] == -1) {
                tempNumOne[0] = 6;
                textArea.setText(tempNumOne[0] + "");
            } else if (tempNumOne[0] != -1 && tempOper[0] == 0) {
                tempNumOne[0] = tempNumOne[0] * 10;
                tempNumOne[0] = tempNumOne[0] + 6;
                textArea.setText(tempNumOne[0] + "");
            }
        }

        if (e.getSource() == btnnum5) {
            lastEntry[0] = 5;
            if (tempOper[0] > 0) {
                if (tempNumTwo[0] == -1) {
                    tempNumTwo[0] = 5;
                    textArea.setText(tempNumTwo[0] + "");
                } else {
                    tempNumTwo[0] = tempNumTwo[0] * 10;
                    tempNumTwo[0] = tempNumTwo[0] + 5;
                    textArea.setText(tempNumTwo[0] + "");
                }

            }
            if (tempNumOne[0] == -1) {
                tempNumOne[0] = 5;
                textArea.setText(tempNumOne[0] + "");
            } else if (tempNumOne[0] != -1 && tempOper[0] == 0) {
                tempNumOne[0] = tempNumOne[0] * 10;
                tempNumOne[0] = tempNumOne[0] + 5;
                textArea.setText(tempNumOne[0] + "");
            }
        }

        if (e.getSource() == btnnum4) {
            lastEntry[0] = 4;
            if (tempOper[0] > 0) {
                if (tempNumTwo[0] == -1) {
                    tempNumTwo[0] = 4;
                    textArea.setText(tempNumTwo[0] + "");
                } else {
                    tempNumTwo[0] = tempNumTwo[0] * 10;
                    tempNumTwo[0] = tempNumTwo[0] + 4;
                    textArea.setText(tempNumTwo[0] + "");
                }

            }
            if (tempNumOne[0] == -1) {
                tempNumOne[0] = 4;
                textArea.setText(tempNumOne[0] + "");
            } else if (tempNumOne[0] != -1 && tempOper[0] == 0) {
                tempNumOne[0] = tempNumOne[0] * 10;
                tempNumOne[0] = tempNumOne[0] + 4;
                textArea.setText(tempNumOne[0] + "");
            }
        }

        if (e.getSource() == btndiv) {
            tempOper[0] = 4;
        }

        if (e.getSource() == btnnum9) {
            lastEntry[0] = 9;
            if (tempOper[0] > 0) {
                if (tempNumTwo[0] == -1) {
                    tempNumTwo[0] = 9;
                    textArea.setText(tempNumTwo[0] + "");
                } else {
                    tempNumTwo[0] = tempNumTwo[0] * 10;
                    tempNumTwo[0] = tempNumTwo[0] + 9;
                    textArea.setText(tempNumTwo[0] + "");
                }

            }
            if (tempNumOne[0] == -1) {
                tempNumOne[0] = 9;
                textArea.setText(tempNumOne[0] + "");
            } else if (tempNumOne[0] != -1 && tempOper[0] == 0) {
                tempNumOne[0] = tempNumOne[0] * 10;
                tempNumOne[0] = tempNumOne[0] + 9;
                textArea.setText(tempNumOne[0] + "");
            }
        }

        if (e.getSource() == btnnum8) {
            lastEntry[0] = 8;
            if (tempOper[0] > 0) {
                if (tempNumTwo[0] == -1) {
                    tempNumTwo[0] = 8;
                    textArea.setText(tempNumTwo[0] + "");
                } else {
                    tempNumTwo[0] = tempNumTwo[0] * 10;
                    tempNumTwo[0] = tempNumTwo[0] + 8;
                    textArea.setText(tempNumTwo[0] + "");
                }

            }
            if (tempNumOne[0] == -1) {
                tempNumOne[0] = 8;
                textArea.setText(tempNumOne[0] + "");
            } else if (tempNumOne[0] != -1 && tempOper[0] == 0) {
                tempNumOne[0] = tempNumOne[0] * 10;
                tempNumOne[0] = tempNumOne[0] + 8;
                textArea.setText(tempNumOne[0] + "");
            }
        }

        if (e.getSource() == btnnum7) {
            lastEntry[0] = 7;
            if (tempOper[0] > 0) {
                if (tempNumTwo[0] == -1) {
                    tempNumTwo[0] = 7;
                    textArea.setText(tempNumTwo[0] + "");
                } else {
                    tempNumTwo[0] = tempNumTwo[0] * 10;
                    tempNumTwo[0] = tempNumTwo[0] + 7;
                    textArea.setText(tempNumTwo[0] + "");
                }

            }
            if (tempNumOne[0] == -1) {
                tempNumOne[0] = 7;
                textArea.setText(tempNumOne[0] + "");
            } else if (tempNumOne[0] != -1 && tempOper[0] == 0) {
                tempNumOne[0] = tempNumOne[0] * 10;
                tempNumOne[0] = tempNumOne[0] + 7;
                textArea.setText(tempNumOne[0] + "");
            }
        }

        if (e.getSource() == btnC) {
            textArea.setText(0 + "");
            tempNumOne[0] = -1;
            tempNumTwo[0] = -1;
            tempEqual[0] = -1;
            tempOper[0] = 0;
        }

        if (e.getSource() == btnCe) {
            if (lastEntry[0] != -1) {
                if (tempOper[0] == 0) {
                    tempNumOne[0] = -1;
                    textArea.setText(0 + "");
                } else {
                    tempNumTwo[0] = -1;
                    textArea.setText(0 + "");
                }
            }
        }

        if (e.getSource() == rdbtnHex) {
            currentSetting[0] = 1;
            rdbtnHex.setSelected(true);
            rdbtnDec.setSelected(false);
            rdbtnOct.setSelected(false);
            rdbtnBin.setSelected(false);
        }

        if (e.getSource() == rdbtnDec) {
            currentSetting[0] = 2;
            rdbtnHex.setSelected(false);
            rdbtnDec.setSelected(true);
            rdbtnOct.setSelected(false);
            rdbtnBin.setSelected(false);
        }

        if (e.getSource() == rdbtnOct) {
            currentSetting[0] = 3;
            rdbtnHex.setSelected(false);
            rdbtnDec.setSelected(false);
            rdbtnOct.setSelected(true);
            rdbtnBin.setSelected(false);
        }

        if (e.getSource() == rdbtnBin) {
            currentSetting[0] = 4;
            rdbtnHex.setSelected(false);
            rdbtnDec.setSelected(false);
            rdbtnOct.setSelected(false);
            rdbtnBin.setSelected(true);
        }

        if (e.getSource() == btnbs) {
            if (tempOper[0] == 0 && tempNumOne[0] != -1) {
                if (tempNumOne[0] >=10 ) {
                    tempNumOne[0] = tempNumOne[0] - lastEntry[0];
                    tempNumOne[0] = tempNumOne[0] / 10;
                    textArea.setText(tempNumOne + "");
                }
                else {
                    tempNumOne[0] = 0;
                    textArea.setText(tempNumOne + "");
                }
            }
            else if(tempOper[0] != 0 && tempNumTwo[0] != -1) {
                if (tempNumTwo[0] >=10  && tempOper[0] != 0) {
                    tempNumTwo[0] = tempNumTwo[0] - lastEntry[0];
                    tempNumTwo[0] = tempNumTwo[0] / 10;
                    textArea.setText(tempNumTwo + "");
                }
                else {
                    tempNumTwo[0] = 0;
                    textArea.setText(tempNumTwo + "");
                }
            }
        }


    }

}
